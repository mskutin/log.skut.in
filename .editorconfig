root = true
; Unix-style newlines with a newline ending every file
[**]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
[**.{ts, js,json}]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
quote_type = single
[**.{yml,yaml}]
indent_size = 2
[**.md]
indent_style = space
indent_size = 2
[Makefile]
indent_style = tab
[Jenkinsfile]
indent_style = space
indent_size = 2
